#include <stdio.h>
#include <stdbool.h>
#include <string.h>

#define STATES 2
#define ALPHABET_SIZE 2

// Transition table for DFA
int transitionTable[STATES][ALPHABET_SIZE] = {
    {1, 0}, // State 0: if input 'a' then move to state 1, otherwise stay in state 0
    {1, 1}  // State 1: if input 'a' then stay in state 1, otherwise stay in state 1
};

// Function to simulate DFA
bool simulateDFA(char *input) {
    int currentState = 0;
    int i;
    for (i = 0; i < strlen(input); i++) {
        if (input[i] != 'a') // If input character is not 'a'
            return false;
        currentState = transitionTable[currentState][0]; // Transition based on input 'a'
    }
    return currentState == 1; // Check if the final state is accepting
}

int main() {
    char input[100];
    printf("Enter input string: ");
    scanf("%s", input);

    if (simulateDFA(input))
        printf("Accepted\n");
    else
        printf("Rejected\n");

    return 0;
}
